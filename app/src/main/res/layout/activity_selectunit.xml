<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/decition"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="example.myself.myapplication.SelectUnitPageActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#72696969">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/thamana" />


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="top"

            android:background="#49a1a1a1"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="Thamanna Weerasekara"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name"
                android:background="#00ffffff"

                android:gravity="center"
                android:orientation="horizontal"


                >


                <TextView
                    android:id="@+id/txt_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_name"
                    android:layout_gravity="center"

                    android:text="22"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Years"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="20dp"
                    android:text="Sri Lanka"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:gravity="bottom|center"
            android:orientation="horizontal"
            android:background="#a0454545">



            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:columnCount="5"
                android:orientation="vertical"
                android:rowCount="1">


                <at.markushi.ui.CircleButton
                android:id="@+id/bt_chat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/chat_icon"
                app:cb_color="#00ffffff"
                app:cb_pressedRingWidth="8dip" />

                <at.markushi.ui.CircleButton
                    android:id="@+id/bt_gallary"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/camera_icon"
                    app:cb_color="#00ffffff"
                    app:cb_pressedRingWidth="8dip" />

                <at.markushi.ui.CircleButton
                    android:id="@+id/bt_suggest"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/suggest_icon"
                    app:cb_color="#00ffffff"
                    app:cb_pressedRingWidth="8dip" />

                <at.markushi.ui.CircleButton
                    android:id="@+id/bt_gallary3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/info_icon"
                    app:cb_color="#00ffffff"
                    app:cb_pressedRingWidth="8dip" />

                <at.markushi.ui.CircleButton
                    android:id="@+id/bt_relation"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/relation_icon"
                    app:cb_color="#00ffffff"
                    app:cb_pressedRingWidth="8dip" />



                </GridLayout>

            </LinearLayout>





    </FrameLayout>


</RelativeLayout>
